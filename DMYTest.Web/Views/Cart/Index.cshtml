@using PagedList;
@using PagedList.Mvc;
@model List<DMYTest.Data.Models.Cart>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<h2>@Session["Ad"]  @Session["Soyad"]</h2>

<h3>Sepetim</h3>
<table class="table table-bordered" id="table">
    <thead>
        <tr>

            <th>Ürün Bilgisi</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Tarih</th>
            <th>Resim</th>
            <th>Sil</th>
            <th>Satın Al</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>@item.Product.ProductName</td>

            <td>
                <div>
                    @Html.ActionLink("-", "decrease", new { id = item.CartID }, new { @class = "btn btn-info btn-sm azalt" })
                </div>
                <div>


                    @Html.TextBoxFor(x => item.Quantity, new { @class = "txt", data_id = item.CartID })

                </div>
                <div>
                    @Html.ActionLink("+", "increase", new { id = item.CartID }, new { @class = "btn btn-info btn-sm arttir" })
                </div>
            </td>
            <td>@item.Price</td>

            <td>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</td>
            @foreach (var i in item.Product.Images.Where(i => i.ProductID == item.ProductID).Select(X => X.ImagePath).ToList())
            {
                <td><img src="~/Content/Image/@i" width="90" height="90" /></td>

            }
            <td><a href="/cart/delete/@item.CartID" class="btn btn-danger" onclick="return ('Emin misiniz')">Sil</a></td>

            <td><a href="/sales/buy/@item.CartID" class="btn btn-success">Satın Al</a></td>
        </tr>
        }
    </tbody>
</table>
<div class="container"> @ViewBag.Cost</div>
<br />
<div class="container form-group">
    <a href="/sales/buyall" class="btn btn-success form-control">Tümünü Satın Al</a>
</div>

<div class="container form-group">
    <a href="/cart/deleteall" class="btn btn-danger form-control">Hepsini Sil</a>
</div>


<style>
    .txt {
        line-height: 18px;
        /*padding: 0 4px 10px 4px;*/
        width: 50px !important;
        height: 32px;
        font-size: 14px;
        text-align: center;
        border: solid 1px #ccc;
        margin-left: 23px;
    }

    .arttir {
        display: block;
        cursor: pointer;
        border: solid 1px #ccc;
        /*text-align: center;

    font-size: 18px;*/
        position: absolute;
        margin-top: -32px;
        margin-left: 75px;
    }

    .azalt {
        display: block;
        border: solid 1px #ccc;
        cursor: pointer;
        position: absolute;
        margin-right: 90px;
    }
</style>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(function () {

        $('.txt').on('change', function () {
            var miktar = $(this).val();
            var sepetid = $(this).attr('data-id');
            $.ajax({
                url: '/Cart/DinamikMiktar',
                data: { id: sepetid, miktari: miktar },
                success: function (res) {

                    document.location.reload();
                }


            });

        });
    });
</script>


<script type="text/javascript">
    $(function () {
        $("#table").on("click", ".btnDelete", function () {

            var btn = $(this);
            bootbox.confirm("Silmek istediginize emin misiniz?", function (result) {

                if (result) {
                    var id = btn.data("id");
                    $.ajax(
                        {
                            type: "GET",
                            url: "/adminproduct/delete/" + id,
                            success: function () {
                                btn.parent().parent().remove();
                            }
                        });
                } else if (result === false) {
                    bootbox.alert("Urun Silinmedi");
                } else {
                    bootbox.alert("Hata Oluştu");
                }
            });


        });
    });

</script>