@model DMYTest.Web.Models.UserToRegister
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Layout.cshtml";
}


    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                
                <div class="col-sm-4">
                    <div class="signup-form">
                        <!--sign up form-->
                        <h2>Sign Up</h2>
                        <form action="/account/register" method="post">
                            <input type="text" placeholder="Your name" name="FirstName" />
                            @Html.ValidationMessageFor(x => x.FirstName, "", new { @style = "color:red" })

                            <input type="text" placeholder="Your last name" name="LastName" />
                            @Html.ValidationMessageFor(x => x.LastName, "", new { @style = "color:red" })

                            <input type="text" placeholder="Your username" name="UserName" />
                            @Html.ValidationMessageFor(x => x.UserName, "", new { @style = "color:red" })

                            <input type="email" placeholder="Your email" name="Email" />
                            @Html.ValidationMessageFor(x => x.Email, "", new { @style = "color:red" })

                            <input type="password" placeholder="password" name="Password" />
                            @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color:red" })

                            <input type="password" placeholder="repassword" name="RePassword" />
                            @Html.ValidationMessageFor(x => x.RePassword, "", new { @style = "color:red" })


                            <button type="submit" class="btn btn-default">Signup</button>
                        </form>
                    </div><!--/sign up form-->
                </div>
            </div>
        </div>
    </section><!--/form-->
