@model DMYTest.Web.Models.UserToLogin
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}


    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="login-form">
                        <!--login form-->
                        <h2>Login Form</h2>
                        <form action="/account/login" method="post">
                            <input type="email" placeholder="email address" name="Email" />
                            @Html.ValidationMessageFor(x => x.Email, "", new { @style = "color:red" })

                            <input type="password" placeholder="password" name="Password" />
                            @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color:red" })

                            <span>
                                <input type="checkbox" class="checkbox">
                                Keep me signed in
                            </span>
                            <button type="submit" class="btn btn-default">Log In</button>
                            <a href="/Account/register" class="btn btn-default btn-primary">Register</a>
                        </form>
                    </div><!--/login form-->
                </div>
                
            </div>
        </div>
    </section><!--/form-->

