@model DMYTest.Data.Models.Category
@{
    ViewBag.Title = "Update";
    ViewBag.Id = Model.CategoryID;
}



<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })
                <div class="form-group">
                    <label>Kategori Adi</label>
                    <input type="text" class="form-control" name="CategoryName" value="@Model.CategoryName" />
                    @Html.ValidationMessageFor(x => x.CategoryName, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Aciklamasi</label>
                    <input type="text" class="form-control" name="Description" value="@Model.Description" />
                    @Html.ValidationMessageFor(x => x.Description, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group" style="display:none;">
                    @Html.LabelFor(model => model.CategoryID)
                    @Html.EditorFor(model => model.CategoryID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                </div>
                <button class="btn btn-warning" type="submit">Guncelle</button>
            </form>
        </div>
    </div>
</div>
