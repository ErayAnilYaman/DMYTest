@model List<DMYTest.Data.Models.Category>
@{
    ViewBag.Title = "Index";
}
<a class="btn btn-success" href="/AdminCategory/Create">Kategori Ekle</a>
<br />
<br />

<table class="table table-bordered" id="table">
    <tr>
        <th>Ad</th>
        <th>Aciklama</th>
        <th>Sil</th>
        <th>Guncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            @*<td><a href="/AdminCategory/Delete/@item.CategoryID" class="btn btn-danger" onclick="return ('Emin misiniz')">Sil</a></td>*@
            <td><a class="btn btn-danger btnDelete" data-id="@item.CategoryID">Sil</a></td>
            <td><a class="btn btn-warning" href="/AdminCategory/Update/@item.CategoryID">Guncelle</a></td>
        </tr>

    }
</table>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script type="text/javascript" >
    $(function () {
        $("#table").on("click", ".btnDelete", function () {

            var btn = $(this);
            bootbox.confirm("Silmek istediginize emin misiniz?", function (result) {

                if (result) {
                    var id = btn.data("id");
                    $.ajax(
                        {
                            type: "GET",
                            url: "/AdminCategory/Delete/" + id,
                            success: function () {
                                btn.parent().parent().remove(); // btn.parent().parent() yerine btn.closest("tr") kullanımı
                            }
                        });
                } else if (result === false) {
                    bootbox.alert("Kategori Silinmedi");
                } else {
                    bootbox.alert("Hata Oluştu");
                }
            });


        });
    });






</script>