
@using PagedList;
@using PagedList.Mvc;

@model PagedList.IPagedList<DMYTest.Data.Models.Product>

@{
    ViewBag.Title = "Index";s

}
<a class="btn btn-success" href="/adminproduct/create">Urun Ekle</a>
<br />
<br />

<table class="table table-bordered" id="table">
    <tr>
        <th>Urun Adi</th>
        <th>Aciklama</th>
        <th>Fiyat</th>
        <th>Stok Adedi</th>
        <th>Kategorisi</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Guncelle</th>

    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.ProductName</td>
        <td>@item.Description</td>
        <td>@item.UnitPrice</td>
        <td>@item.Stock</td>
        <td>@item.Category.CategoryName</td>
        <td>
            @if (item.Images.Where(i => i.ProductID == item.ProductID).Any())
            {
                foreach (var image in item.Images.Where(i => i.ProductID == item.ProductID).ToList())
                {
                    <img src="~/Content/Image/@image.ImagePath" width="80" height="60" />
                }
            }
            else
            {
                <img src="~/Content/Image/Default/default-image_1080.png" width="80" height="60">
            }

        </td>
        <td><a class="btn btn-danger btnDelete" data-id="@item.ProductID">Sil</a></td>
        <td><a class="btn btn-warning" href="/adminproduct/update/@item.ProductID">Guncelle</a></td>

    </tr>
    }
</table>
@Html.PagedListPager(Model, pageNumber => Url.Action("Index", new { pageNumber }), PagedListRenderOptions.Classic)

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script type="text/javascript">
    $(function () {
        $("#table").on("click", ".btnDelete", function () {

            var btn = $(this);
            bootbox.confirm("Silmek istediginize emin misiniz?", function (result) {

                if (result) {
                    var id = btn.data("id");
                    $.ajax(
                        {
                            type: "GET",
                            url: "/adminproduct/delete/" + id,
                            success: function () {
                                btn.parent().parent().remove();
                            }
                        });
                } else if (result === false) {
                    bootbox.alert("Urun Silinmedi");
                } else {
                    bootbox.alert("Hata Oluştu");
                }
            });


        });
    });

</script>