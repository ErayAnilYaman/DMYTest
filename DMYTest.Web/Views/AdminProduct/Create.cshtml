@model DMYTest.Data.Models.Product
@{
    ViewBag.Title = "Create";
    
}

<style>
    .dropdown {
        position: relative;
        display: inline-block;
    }

    .select-dropdown {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        padding: 12px 16px;
        z-index: 1;
    }

    .dropdown:hover .select-dropdown {
        display: block;
    }
</style>


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })
                <div class="form-group">
                    <label>Product Name</label>
                    <input type="text" class="form-control" name="ProductName" placeholder="Ürün Adı"/>
                    @Html.ValidationMessageFor(x => x.ProductName, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Description</label>
                    <input type="text" class="form-control" name="Description" placeholder="Ürün Açıklaması" />
                    @Html.ValidationMessageFor(x => x.Description, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Stock Count</label>
                    <input type="number" class="form-control" name="Stock" placeholder="Ürün Stoğu"/>
                    @Html.ValidationMessageFor(x => x.Stock, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Unit Price</label>
                    <input type="number" class="form-control" name="UnitPrice" placeholder="Ürün Fiyatı"/>
                    @Html.ValidationMessageFor(x => x.UnitPrice, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Image</label>
                    <input type="file" class="form-control" name="File" placeholder="Ürün Resmi"/>
                    @ViewBag.img
                </div>
                
                
                <br />
                <div class="form-group">
                    <label>Category</label>
                    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewData["ctgr"], new { @class = "form-control" })
                </div>
                <br />
                <button class="btn btn-success" type="submit">Add</button>
            </form>
        </div>
    </div>
</div>