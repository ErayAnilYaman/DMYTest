@model DMYTest.Data.Models.Product
@{
    ViewBag.Title = "Create";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })
                <div class="form-group">
                    <label>Urun Adi</label>
                    <input type="text" class="form-control" name="ProductName" />
                    @Html.ValidationMessageFor(x => x.ProductName, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Aciklamasi</label>
                    <input type="text" class="form-control" name="Description" />
                    @Html.ValidationMessageFor(x => x.Description, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Aciklamasi</label>
                    <input type="text" class="form-control" name="Stock" />
                    @Html.ValidationMessageFor(x => x.Stock, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Aciklamasi</label>
                    <input type="text" class="form-control" name="UnitPrice" />
                    @Html.ValidationMessageFor(x => x.UnitPrice, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Aciklamasi</label>
                    <input type="text" class="form-control" name="CategoryName" />
                    @Html.ValidationMessageFor(x => x.Categories.CategoryName, "", new { @style = "color:red" })
                </div>
                <br />
                <button class="btn btn-success" type="submit">Ekle</button>
            </form>
        </div>
    </div>
</div>