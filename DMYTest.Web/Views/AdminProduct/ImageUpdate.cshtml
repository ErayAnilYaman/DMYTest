@model DMYTest.Data.Models.Image
@{
    ViewBag.Title = "UpdateImage";
    ViewBag.Id = Model.ImageID;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })

                
                <br />
                <div class="form-group">
                    <label>Resim</label>
                    <input type="file" class="form-control" name="File" />
                    @ViewBag.img
                </div>

                <div class="form-group" style="display:none;">
                    @Html.LabelFor(model => model.ImageID)
                    @Html.EditorFor(model => model.ImageID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ImageID, "", new { @class = "text-danger" })
                </div>
                <button class="btn btn-warning" type="submit">Guncelle</button>
            </form>
        </div>
    </div>
</div>
