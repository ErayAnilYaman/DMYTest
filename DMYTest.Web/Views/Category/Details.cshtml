@model List<DMYTest.Data.Models.Product>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<section>
    <div class="container">
        <div class="row">
            @Html.Action("CategoryList", "Category")

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">Products</h2>
                    @foreach (var product in Model)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <a href="/product/details/@product.ProductID">
                                            @foreach (var i in product.Images.Where(i => i.ProductID == product.ProductID))
                                            {
                                                <img src="~/Content/Image/@i.ImagePath" width="80" height="200">
                                            }
                                        </a>
                                        <h2>@product.UnitPrice TL</h2>
                                        <p>@product.ProductName</p>
                                        <a href="/product/productdetails/@product.ProductID" class="btn btn-default add-to-cart">Product Detail</a>
                                    </div>

                                </div>

                            </div>
                        </div>
                    }





                </div><!--features_items-->
                <br />
                <br />
                <br />
                <br />
                <br />

                <br />
                <br />
                <br />
                <br />
                <br />

                @Html.Action("Popular", "Product")


            </div>
        </div>
    </div>
</section>