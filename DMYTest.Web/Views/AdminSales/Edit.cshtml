
@model DMYTest.Data.Models.Sales
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger"})


                <br />
                <div class="form-group" hidden>
                    <label>Urun Adi</label>
                    <input type="text" class="form-control" name="ProductName" value="@Model.Product.ProductName" />
                    @Html.HiddenFor(x => x.ProductID)
                </div>
                <br />

                <div class="form-group">
                    <label>Satis Adedi</label>
                    <input type="number" class="form-control" name="Description" value="@Model.Quantity" />
                    @Html.ValidationMessageFor(x => x.Quantity, "", new { @style = "color:red" })
                </div>


                
                <br />
                <div class="form-group" hidden>
                    <label>Resim</label>
                    <input type="file" class="form-control" name="File" />
                    @Html.HiddenFor(m => m.Image)
                </div>


                <div class="form-group" style="display:none;">
                    @Html.LabelFor(model => model.SalesID)
                    @Html.EditorFor(model => model.SalesID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SalesID, "", new { @class = "text-danger" })
                </div>
                <button class="btn btn-warning" type="submit">Guncelle</button>
            </form>
        </div>
    </div>
</div>



