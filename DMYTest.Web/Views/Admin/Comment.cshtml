@using PagedList;
@using PagedList.Mvc;
@model IPagedList<DMYTest.Data.Models.Comment>
@{
    ViewBag.Title = "Comment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" id="table">
    <tr>
        <th>Icerik</th>
        <th>Urun Bilgisi</th>
        <th>Kullanici</th>
        <th>Tarih</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Contents</td>
            <td>@item.Product.ProductName</td>
            <td>@item.User.FirstName @item.User.LastName</td>
            <td>@item.Date</td>
            <td><span class="btnDelete" data-id="@item.ID"><a class="btn btn-danger">Sil</a></span></td>
        </tr>
    }
</table>



<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script type="text/javascript">



    $(document).ready(function () {
        $('.btnDelete').on('click', function () {
            var btn = $(this);
            deleteById(btn);
        });

    });
    function deleteById(btn) {
        var id = btn.data('id');

        bootbox.confirm("Silmek istediginize emin misiniz?", function (result) {
            if (result) {
                $.ajax({
                    type: "GET",
                    url: "/admin/delete/" + id,
                    success: () => {
                        btn.parent().parent().remove();
                        bootbox.success("Yorum Silindi!!");
                    }
                })
            }
            else if (result === false) {
                bootbox.alert("Silinemedi");
            }
            else {
                bootbox.alert("Silinmedi");
            }
        })
    }

