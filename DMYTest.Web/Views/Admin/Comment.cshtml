@using PagedList;
@using PagedList.Mvc;
@model IPagedList<DMYTest.Data.Models.Comment>
@{
    ViewBag.Title = "Comment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" id="table">
    <tr>
        <th>Icerik</th>
        <th>Urun Bilgisi</th>
        <th>Kullanici</th>
        <th>Tarih</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Contents</td>
        <td>@item.Product.ProductName</td>
        <td>@item.User.FirstName @item.User.LastName</td>
        <td>@item.Date</td>
        <td><a class="btn btn-danger btnDelete" data-id="@item.ID">Sil</a></td>



    </tr>
    }
</table>



<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script type="text/javascript">
    $(function () {
        $("#table").on("click", ".btnDelete", function () {

            var btn = $(this);
            bootbox.confirm("Silmek istediginize emin misiniz?", function (result) {

                if (result) {
                    var id = btn.data("id");
                    $.ajax(
                        {
                            type: "GET",
                            url: "/admin/delete/" + id,
                            success: function () {
                                btn.parent().parent().remove();
                            }
                        });
                } else if (result === false) {
                    bootbox.alert("Urun Silinmedi");
                } else {
                    bootbox.alert("Hata Oluştu");
                }
            });


        });
    });

</script>