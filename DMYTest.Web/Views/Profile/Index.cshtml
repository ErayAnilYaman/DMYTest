@model DMYTest.Data.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    
                    <div class="row about-list">
                        @if (Model.Customer != null)
                        {
                            <h3 class="dark-color">About Me</h3>
                            <hr />
                            <div class="col-md-6">
                                <div class="media">
                                    <label>Company Name</label>
                                    <p>@Model.Customer.CompanyName</p>
                                </div>
                                <div class="media">
                                    <label>Address</label>
                                    <p>@Model.Customer.Address</p>
                                </div>
                                <div class="media">
                                    <label>E-Mail</label>
                                    <p>@Model.Customer.Email</p>
                                </div>
                                <div class="fa-phone">
                                    <label>Phone</label>
                                    <p>@Model.Customer.Phone</p>
                                </div>
                            
                                <span><a href="/profile/update" class="btn btn-warning">Update</a></span>
                            </div>
                            <br />

                        }
                        else
                        {
                            <div>
                                <span><a href="/profile/create" class="btn btn-default">Create Customer Account</a></span>
                            </div>
                        }

                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                </div>
            </div>
        </div>
    </div>
</section>
<link href="~/Views/Profile/css/profileCSS.css" rel="stylesheet" />