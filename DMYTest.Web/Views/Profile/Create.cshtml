@model DMYTest.Data.Models.Customer
@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">

        <div class="col-md-3 border-right">
            <span class="font-weight-bold centered" style="font-size:25px;"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Session["Ad"] @Session["Soyad"] </span>
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="text-black-50"> @Session["Mail"]</span><span> </span></div>
        </div>
        <div class="col-md-5 border-right">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })
                <div class="form-group">
                    <label>Company Name</label>
                    <input type="text" class="form-control" name="CompanyName" placeholder="Company Name" />
                    @Html.ValidationMessageFor(x => x.CompanyName, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Company Email</label>
                    <input type="text" class="form-control" name="Email" placeholder="Company Email" />
                    @Html.ValidationMessageFor(x => x.Email, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Country</label>
                    <input type="text" class="form-control" name="Country" placeholder="Country" />
                    @Html.ValidationMessageFor(x => x.Country, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Phone</label>
                    <input type="text" class="form-control" name="Phone" placeholder="Phone" />
                    @Html.ValidationMessageFor(x => x.Phone, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Post Code</label>
                    <input type="text" class="form-control" name="PostCode" placeholder="Post Code" />
                    @Html.ValidationMessageFor(x => x.PostCode, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" name="Address" placeholder="Address" />
                    @Html.ValidationMessageFor(x => x.Address, "", new { @style = "color:red" })
                </div>
                <br />

                <button class="btn btn-success" type="submit">Create</button>
            </form>

        </div>

    </div>
</div>