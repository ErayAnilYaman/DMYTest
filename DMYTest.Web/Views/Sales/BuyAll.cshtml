@model List<DMYTest.Data.Models.Cart>
@{
    ViewBag.Title = "BuyAll";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container">
    <div class="container">
        
        
    </div>

</div>


<div class="container">
    @using (Html.BeginForm("buyall", "sales", FormMethod.Post))
    {


        for (int i = 0; i < Model.Count; i++)
        {
            <div class="modal-body">
                @Html.HiddenFor(c => c[i].CartID)
                @Html.HiddenFor(c => c[i].Image)


                <div class="form-group">
                    Product :@Html.DisplayFor(c => c[i].Product.ProductName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    Count :@Html.DisplayFor(c => c[i].Quantity, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <h5>
                        Image :
                        <img src="~/Content/Image/@Model[i].Image" width="80" height="80" />
                    </h5>
                </div>
                <div class="form-group">
                    Price :@Html.DisplayFor(c => c[i].Price, new { @class = "form-control" }) TL
                </div>

            </div>

        }
        

        <div class="container">
            <div class="form-group">
                <button id="submit" class="btn btn-success">Buy</button>
                <a href="/Cart/Index" class="btn btn-danger">Cancel</a>
            </div>
        </div>

    }
</div>