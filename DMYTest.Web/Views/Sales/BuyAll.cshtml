@model List<DMYTest.Data.Models.Cart>
@{
    ViewBag.Title = "BuyAll";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container">
    <div class="container">
        <h2>Merhaba @Session["Ad"]  @Session["Soyad"]</h2>
        <h2>Satin Alma Sayfamiza Hos Geldiniz.</h2>
    </div>

</div>


<div class="container">
    @using (Html.BeginForm("buyall", "sales", FormMethod.Post))
    {


        for (int i = 0; i < Model.Count; i++)
        {
            <div class="modal-body">
                @Html.HiddenFor(c => c[i].CartID)
                @Html.HiddenFor(c => c[i].Image)


                <div class="form-group">
                    Urun Bilgisi :@Html.DisplayFor(c => c[i].Product.ProductName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    Adet :@Html.DisplayFor(c => c[i].Quantity, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <h5>
                        Resim :
                        <img src="~/Content/Image/@Model[i].Image" width="80" height="80" />
                    </h5>
                </div>
                <div class="form-group">
                    Fiyat :@Html.DisplayFor(c => c[i].Price, new { @class = "form-control" }) TL
                </div>

            </div>

        }
        <p style="color:red;text-align :center;">Tutar : @ViewBag.Cost TL</p>

        <div class="container">
            <div class="form-group">
                <button id="submit" class="btn btn-success">Satin Al</button>
            </div>
            <div style="float:right">
                <a href="/Cart/Index" class="btn btn-danger">Iptal Et</a>
            </div>
        </div>

    }
</div>